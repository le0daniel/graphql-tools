{
  "name": "le0daniel/graphql-tools",
  "description": "Tools for using endpoints in PHP graphql applications based on webonyx/graphql-php",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "type": "package",
  "license": "MIT",
  "authors": [
    {
      "name": "leodanielstuder",
      "email": "leodaniel@nitrosoft.ch"
    }
  ],
  "scripts": {
    "test": "phpunit"
  },
  "require": {
    "php": "^8.2|^8.3",
    "webonyx/graphql-php": "^15",
    "google/protobuf": "^3.19"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^9.3.3",
    "phpspec/prophecy-phpunit": "^2.0",
    "phpstan/phpstan": "^1.7"
  },
  "autoload": {
    "psr-4": {
      "GraphQlTools\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GraphQlTools\\Test\\": "tests/"
    }
  }
}
